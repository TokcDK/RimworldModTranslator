<UserControl x:Class="RimworldModTranslator.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:viewmodels="clr-namespace:RimworldModTranslator.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel>
        <ComboBox ItemsSource="{Binding GamesList}" 
                  SelectedItem="{Binding SelectedGame}"
                  Width="Auto">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GamePath}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Add game" Command="{Binding AddNewGameCommand}" />
    </StackPanel>
</UserControl>
