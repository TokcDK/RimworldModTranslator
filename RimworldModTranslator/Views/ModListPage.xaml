<UserControl x:Class="RimworldModTranslator.Views.ModlistPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:viewmodels="clr-namespace:RimworldModTranslator.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding ModsList}">
        </DataGrid>
        <TextBlock Grid.Row="1" Text="{Binding TXT}" />
    </Grid>
</UserControl>
