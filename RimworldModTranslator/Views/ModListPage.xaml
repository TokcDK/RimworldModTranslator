<UserControl x:Class="RimworldModTranslator.Views.ModlistPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:viewmodels="clr-namespace:RimworldModTranslator.ViewModels" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dgx="urn:tom-englert.de/DataGridExtensions"
             xmlns:dataGrid2D="http://gu.se/DataGrid2D"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" 
                  ItemsSource="{Binding ModsList}"
                  AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedMod}"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="1"
                  dgx:DataGridFilter.IsAutoFilterEnabled="True"
                  dataGrid2D:Index.StartAt="1"
                  >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding ModDisplayingName}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
            <DataGrid.RowHeaderStyle>
                <Style TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Content" Value="{Binding Path=(dataGrid2D:Index.OfRow), RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}"/>
                </Style>
            </DataGrid.RowHeaderStyle>
        </DataGrid>
        <Grid Grid.Row="1" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="Auto" MaxWidth="100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Text="{Binding SelectedMod.ModDisplayingName}" 
                       Margin="2" />
            <Button Grid.Column="1" 
                    VerticalAlignment="Center"
                    Content="Refresh" 
                    Command="{Binding RefreshModListCommand}" 
                    Margin="2" />
            <TextBlock Grid.Column="2" 
                       VerticalAlignment="Center"
                       Text="{Binding ModsList.Count, StringFormat='{}{0} mods'}" 
                       Margin="2" />
        </Grid>
    </Grid>
</UserControl>
